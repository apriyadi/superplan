 // Variables
 	primary-color = #3a7aae
 	secondary-color = #00bbec
 	tertiary-color = #182B49
 	


 // End variables	


@import "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" 


// Typography

h1, h2 {
  font-weight: normal;
}

ul {
  list-style-type: none;
  padding: 0;
}

li {
  display: inline-block;
  margin: 0 10px;
}

body
  	background: whitesmoke


.header
	text-align: left
	padding: 20px 20px 0px 20px

	.logo
		img
			width: 120px
			top: -12px
			position: relative

.card
    @media (min-width: 480px)
    	margin: 10px 0;
    	border: 2px solid tertiary-color
    	border-radius: 14px
    


// Chart module

.donut-container
	width: 260px
	margin:0 auto
	
.chart
	@media (min-width: 768px)
    	padding: 0

.donut-chart
	position:relative
	width:240px
	height:240px	
	
	@media (min-width: 992px)
    	width: 120px
    	height:120px
    	left: 40px
    	top: -20px

	.inner-text
		display:none
	
	.tint
		background: white
		border-radius:50%
		border:7px solid white
		box-shadow: inset 0 0 0 20px #00a1e3
		width:240px
		height:240px
		position:absolute
		top:0
		opacity:0.7

		@media (min-width: 992px)
	    	width:120px 
	    	height:120px
			

	.donut-legend
	    padding: 0
	    position:absolute
	    top: 90px
	    width: 100%
	    
	    @media (min-width: 992px)
	    	top: 30px
	    	left: 140px
	    	width: 200px
	    	text-align: left
	    
		.growth
			background: primary-color
			color: white
			padding: 0px 4px
			border-radius: 6px
			font-size: 0.9em
			position: relative
	
		.defensive
			background: secondary-color
			color: white
			padding: 0px 4px
			border-radius: 6px
			font-size: 0.9em
			position: relative
			
// Slider module

.slider
	padding: 10px
	background: #e2e2e2
	margin: 20px -30px
		
	@media (min-width: 480px)
    	margin: 20px -1px	
    
    @media (min-width: 768px)
    	background: none
    	padding: 10px 0
    	margin: 0
    
	.vue-slider-dot
		border: 4px solid primary-color
		

// Title and description

.super-title
	font-size: 24px;
	@media (min-width: 992px)
    	font-size:38px;
    	border-bottom: 1px solid lightgrey
    	padding: 20px 0 30px 0
    	margin: 0 0 40px 0 

.description
	margin: 0 20px 30px 20px
	text-align: left